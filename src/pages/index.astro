    image={{ src: import('~/assets/images/hero.png'), alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Sec101 - Prestation d'audit en cybersécurité
    </Fragment>

    <Fragment slot="subtitle">
	  Nous aidons les entreprises à sécuriser leurs sites web, leurs applications mobiles et
	  leurs infrastructures cloud à travers des tests d'intrusions.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Stats Widget ****************** -->

  <Stats
    items={[
      { name: 'Auditeurs', value: '8' },
      { name: 'Clients', value: '+50' },
      { name: 'Vulnérabilités', value: '+400' },
      { name: 'Vuln. critiques', value: '+50' },
    ]}
  />

